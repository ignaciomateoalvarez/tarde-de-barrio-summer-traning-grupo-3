<%= form_with model: @student, method: "patch" do |form| %>
  <div class="form-field">
    <%= form.label t('.name') %>
    <%= form.text_field :name %>
  </div>
  <div class="form-field">
    <%= form.label t('.lastname')  %>
    <%= form.text_field :lastname %>
  </div>
  <div class="form-field">
    <%= form.label t('.birthday')  %>
    <%= form.date_field :birthday, max: Date.today %>
  </div>
  <div class="form-field">
    <%= form.label t('.address')  %>
    <%= form.text_field :address %>
  </div>
  <div class="form-field">
    <%= form.label t('.school_grade')  %>
    <%= form.select :school_grade, Student.school_grades.keys%>
  </div>
  <div>
    <%= form.label t('.currently_studying') %>
    <div class='radio-buttons'>
      <div>
        <%= form.radio_button :currently_studying, true %>
        <%= form.label t('.radio-yes')  %>
      </div>
      <div>
        <%= form.radio_button :currently_studying, false %>
        <%= form.label 'No' %>
      </div>
    </div>
  </div>
  <%= form.submit t('.register'), class: 'login-button'  %> 
  </div>
<% end %> 