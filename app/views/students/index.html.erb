<div id= "container" class="container"> 
  <div class="header header-logged">
    <div class="user-header">
      <h2><%= current_user[:name] %></h2>
    </div>
    <div class= "header-link">
      <%=link_to t('.student-list'), students_path %>
    </div>
    <div class="header-link">
        <%= link_to "Logout", :logout , data: { turbo_method: "post" } %>
    </div>
  </div>

  <div class="container-list">
    <div class="form-user-list">
      <%= form_with(html:{class: "form-user-list"},model: @filter, url: users_list_path, method: :get) do |form| %>
      <div class= "search-input">
        <%= form.text_field :name, placeholder: params[:name] %>
      </div> 

      <div>
        <%= button_tag :submit do %>
          <i class='search-icon'></i>
        <% end %>
      </div>
      <% end %>

      <div class="new-user-button">
        <%= button_to new_student_path(), data: { turbo_frame: 'modal' }, method: :get do %>
          <i class='new-user-icon'> </i>
          <span> <%= t('.new-student') %> </span>
        <% end %>
      </div>
    </div>

    <div class="search-msg">
      <% if flash[:notice].present? || flash[:error].present? %>
        <%= render "partials/msg", flash: flash  %>
      <% end %>
    </div>

    <%= render partial: 'student_list', locals: {records: @presenter.students, pagy: @presenter.pagy_data}%>
  </div>
</div> 