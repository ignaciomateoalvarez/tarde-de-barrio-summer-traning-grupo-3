<div class='show-container'>
  <div class="user-container">
    <div class='show-header'>
      <h2> <%= link_to t('.student'), students_path %> </h2>
      <h2> > </h2>
      <h2 class='light-blue-color'> <%= @student.full_name %> </h2>
    </div>
    <h1> <%= @student.name %> <%= @student.lastname %>  </h1>
    <div class="student-data">
      <h2 class='light-blue-color'> <%= t('.student-data')%> </h2>
        <div>
          <h3> <%= t('.birthday')%>  </h3>
          <p> <%= @student.birthday %> </p>
        </div>
        <div>
          <h3> <%= t('.address')%> </h3>
          <p> <%= @student.address %> </p>
        </div>
        <div>
          <h3> <%= t('.school_grade')%>  </h3>
          <p> <%= @student.school_grade_capitalize %> </p>
        </div>
        <div>
          <h3> <%= t('.currently_studying')%>  </h3>
          <p> <%= @student.currently_studying_humanized %> </p>
        </div> 
    </div>
  </div>
  <div class='comments-container'>
    <%= render partial: "comments/form", locals: { student: @student } %>
    <div class='comments'>
      <h2> Comentarios </h2>
      <% if @comments.any? %>
        <% @comments.each do |comment| %>
            <div class='comment'>
                <div class='comment-header'>
                  <div class='coment-header-left'>
                    <p class='comment-username'> <%= comment.name %> </p>
                    <p class='subcomment-hour'><%= comment.hour %></p>
                  </div>
                  <div class='coment-header-right'>
                    <div class= "likes">
                      <p>99</p>
                      <%= image_submit_tag("like.svg", class: 'like-svg')%>
                    </div>
                  </div>
                </div>
                <p> <%= comment.body %> </p>
            <details>
              <summary class='summary-btn-comment'></summary>
              <hr class='hr-style'/>
              <div class='sub-comment-container'>
                <% comment.subcomments.each do |subcomment| %>
                  <div class='sub-comment'>
                    <div class='subcomment-header'>
                      <p class='subcomment-username'> <%= subcomment.decorate.name %> </p>
                      <p class='subcomment-hour'><%= subcomment.decorate.hour %></p>
                    </div>
                    <p> <%= subcomment.decorate.body %> </p>
                  </div>
                <% end %>
              </div>
              <%= render partial: "comments/post_sub_comment_form", locals: { comment: comment, student: @student}  %>
            </details>
            </div>
        <% end %>
      <% else %>
        <p> Sin comentarios. </p>
      <% end %>
    <div>
  </div>
</div>