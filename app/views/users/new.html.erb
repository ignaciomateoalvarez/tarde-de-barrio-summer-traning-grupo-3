<%= turbo_frame_tag "modal" do %>
  <%= render TurboModalComponent.new do %>
    <%= tag.div data: { controller: "turbo-modal" }, style: "padding: 30px;" do %>
      <div id="new-user-modal" class="modal">
        <div class="container-modal"> 
            <div class="modal-form">
              <div class="title">
                <h1>Crear usuario</h1>
              </div>
              <%= render "new_user_form", user: @user %>
            </div>
        </div> 
      </div>
    <% end %>
  <% end %>
<% end %>