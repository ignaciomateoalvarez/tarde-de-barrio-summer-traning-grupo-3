<div class='users-index'>
  <div class="header-list">
    <%= link_to "Logout", :logout , data: { turbo_method: "post" } %>
    <%=link_to users_list_path do%>
      Users
    <% end %>
    <p><%= current_user[:name] %></p>
  </div>

  <div class='filter-section'>
    <div>
      <%=link_to students_path do%>
        <%= t('.students_list') %>
      <% end %>
    </div>
    <div>
      <%=link_to users_list_path do%>
        <%= t('.users_list') %>
      <% end %>
    </div>

    <div class="form-user-list">
      <%= form_with(html:{class: "form-user-list"},model: @filter, url: users_list_path, method: :get) do |form| %>
      <div>
        <%= button_tag :submit, class: 'filter-button' do %>
          <i class='search-icon'></i>
        <% end %>
      </div>
      <div class= "search-input">
        <%= form.text_field :name, placeholder: params[:name] %>
      </div> 
      <% end %>
      <div class="new-user-button">
        <%= button_to new_user_path(), data: { turbo_frame: 'modal' }, method: :get do %>
          <i class='new-user-icon'> </i>
          <span>Nuevo Usuario</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container-list">
    <div class="search-msg">
      <% if flash[:notice].present? || flash[:error].present? %>
        <%= render "partials/msg", flash: flash  %>
      <% end %>
    </div>
    <%== render partial: 'users/partials/users_list', locals: {records: @records, pagy: @pagy} %>
  </div>
</div>