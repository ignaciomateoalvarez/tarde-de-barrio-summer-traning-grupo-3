<div id= "container" class="container"> 
  <%= render "header" %>
  <div class="container-list">
    <h1> <%= t '.title' %> </h1>
      <div class="form-user-list">
      <%= form_with(html:{class: "form-user-list"},model: @filter, url: users_list_path, method: :get) do |form| %>
        <div class= "search-input">
          <%= form.text_field :name, value: params[:name]%>
        </div>

        <div>
          <%= button_tag :submit do %>
            <i class='search-icon'></i>
          <% end %>
        </div>
      <% end %>

      <div class="new-user-button">
        <%= button_to new_user_path(@user), data: { turbo_frame: 'modal' }, method: :get do %>
          <i class='new-user-icon'> </i>
          <span>Nuevo Usuario</span>
        <% end %>
        
      </div>
    </div>
    <div class="search-msg">
      <% if flash[:notice].present? || flash[:error].present? %>
        <%= render "msg", flash: flash  %>
      <% end %>
    </div>
      <%== render partial: 'users_list', locals: {records: @records, pagy: @pagy} %>
  </div>
</div> 